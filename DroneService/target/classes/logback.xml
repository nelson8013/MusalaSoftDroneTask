
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>batteryLog.log</file>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.musalasoft.app.Services.DroneService" level="INFO"/>

    <logger name="com.musalasoft.app.Services.DroneService" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
</configuration>